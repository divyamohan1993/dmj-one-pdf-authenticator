# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{java}]
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{json}]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[*.{xml}]
indent_size = 2

[Makefile]
indent_style = tab
